<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoTouchThatGrass3.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    <!-- Card styles for a premium minimal look -->
    <style name="CardView.Minimal" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">24dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <!-- Button styles with premium look -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_premium</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="rippleColor">@color/colorSecondaryLight</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Text styles with premium aesthetic fonts -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:letterSpacing">-0.005</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <!-- Additional text styles for more hierarchy -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="TextAppearance.App.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>